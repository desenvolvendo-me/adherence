<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Adherence" %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= yield :head %>
  <link rel="icon" href="/icon.png" type="image/png">
  <link rel="icon" href="/icon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/icon.png">
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="bg-gray-100">
<div class="flex h-screen">
  <!-- Menu Vertical -->
  <aside class="w-64 bg-blue-600 text-white">
    <div class="p-4">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
        </svg>
        <span class="text-xl font-bold">Adherence</span>
      <% end %>
    </div>

    <nav class="mt-8">
      <div class="px-4 space-y-2">
        <%= link_to machines_path, class: "flex items-center space-x-2 p-2 rounded-lg hover:bg-blue-700 #{current_page?(machines_path) ? 'bg-blue-700' : ''}" do %>
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          <span>Máquinas</span>
        <% end %>

        <%= link_to products_path, class: "flex items-center space-x-2 p-2 rounded-lg hover:bg-blue-700 #{current_page?(products_path) ? 'bg-blue-700' : ''}" do %>
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
          <span>Produtos</span>
        <% end %>

        <%= link_to production_plannings_path, class: "flex items-center space-x-2 p-2 rounded-lg hover:bg-blue-700 #{current_page?(production_plannings_path) ? 'bg-blue-700' : ''}" do %>
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M4 7h16M4 12h16M4 17h10"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M21 12a9 9 0 11-9-9v9"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 12l2.5-2.5"/>
          </svg>
          <span>Planejamentos</span>
        <% end %>
      </div>
    </nav>
  </aside>

  <!-- Conteúdo Principal -->
  <div class="flex-1 flex flex-col overflow-hidden">
    <main class="flex-1 overflow-y-auto p-8">
      <%= render "shared/flash" if flash.any? %>
      <%= yield %>
    </main>
  </div>
</div>
</body>
<div class="absolute bottom-0 w-full text-left text-xs text-white/70">
  <span>versão:<%= Adherence::Application::VERSION %></span>
</div>
</html>