<!-- app/views/machines/index.html.erb -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <header class="bg-white shadow-sm">
      <div class="py-6 px-4 sm:px-6 lg:px-8">
        <div class="md:flex md:items-center md:justify-between">
          <div class="flex-1 min-w-0">
            <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl">
              <%= t('.title') %>
            </h1>
            <p class="mt-1 text-sm text-gray-500">
              <%= t('.description') %>
            </p>
          </div>
          <div class="mt-4 flex md:mt-0 md:ml-4">
            <%= link_to new_machine_path,
                        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              <%= t('.new_machine') %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <div class="py-6 px-4 sm:px-6 lg:px-8">
      <!-- Search and Filters Card -->
      <div class="bg-white rounded-lg shadow mb-6">
        <div class="p-6">
          <%= search_form_for @q, html: { class: "space-y-4 sm:space-y-0 sm:flex sm:items-center sm:gap-4" } do |f| %>
            <div class="flex-1">
              <label for="search" class="sr-only"><%= t('.search_label') %></label>
              <%= f.text_field :code_or_name_cont,
                               class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md",
                               placeholder: t('.search_placeholder') %>
            </div>

            <div class="flex-1">
              <label for="status" class="sr-only"><%= t('.status_label') %></label>
              <%= f.select :status_eq,
                           options_for_select(
                             Machine.statuses.map { |k, v| [t("activerecord.attributes.machine.statuses.#{k}"), v] },
                             selected: params.dig(:q, :status_eq)
                           ),
                           { include_blank: t('.all_statuses') },
                           class: "block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md" %>
            </div>

            <button type="submit"
                    class="w-full sm:w-auto inline-flex items-center justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
              <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
              <%= t('.search') %>
            </button>
          <% end %>
        </div>
      </div>

      <!-- Results Table Card -->
      <div class="bg-white shadow rounded-lg">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= sort_link(@q, :code, t('.table.code')) %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= sort_link(@q, :name, t('.table.name')) %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= sort_link(@q, :status, t('.table.status')) %>
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only"><%= t('.table.actions') %></span>
              </th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            <% @machines.each do |machine| %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= machine.code %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= machine.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if machine.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= t('.status.active') %>
                      </span>
                  <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <%= t('.status.inactive') %>
                      </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-3">
                    <%= link_to machine_path(machine),
                                class: "text-blue-600 hover:text-blue-900 transition-colors",
                                title: t('.actions.show') do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    <% end %>

                    <%= link_to edit_machine_path(machine),
                                class: "text-blue-600 hover:text-blue-900 transition-colors",
                                title: t('.actions.edit') do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>

                    <%= link_to machine_path(machine),
                                class: "text-red-600 hover:text-red-900 transition-colors",
                                data: {
                                  turbo_method: :delete,
                                  turbo_confirm: t('.actions.confirm_deactivate')
                                },
                                title: t('.actions.deactivate') do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
          <div class="flex-1 flex justify-between sm:hidden">
            <%= paginate @machines, theme: 'tailwind' %>
          </div>
          <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div class="text-sm text-gray-700">
              <%= page_entries_info @machines %>
            </div>
            <div>
              <%= paginate @machines, theme: 'tailwind' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>