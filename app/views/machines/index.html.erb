<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Máquinas</h1>
    <%= link_to 'Nova Máquina', new_machine_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
  </div>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <%= form_tag machines_path, method: :get, class: "flex gap-4" do %>
      <div class="flex-1">
        <%= text_field_tag :search, params[:search],
                           placeholder: "Buscar por código ou nome",
                           class: "w-full rounded-lg border-gray-300" %>
      </div>
      <%= submit_tag "Buscar", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg" %>
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Código</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nome</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Situação</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Ações</th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @machines.each do |machine| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            <%= machine.code %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= machine.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if machine.active? %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  Ativa
                </span>
            <% else %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                  Inativa
                </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to 'Editar', edit_machine_path(machine), class: "text-blue-600 hover:text-blue-900" %>
            <%= link_to 'Remover',
                        machine_path(machine),
                        data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' },
                        class: "text-red-600 hover:text-red-900 ml-4" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>