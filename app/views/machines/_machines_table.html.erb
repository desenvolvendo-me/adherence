<table class="min-w-full divide-y divide-gray-200">
  <thead class="bg-gray-50">
  <tr>
    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
      <%= sort_link(@q, :code, t('.table.code'), {}, { data: { turbo_frame: "machines_list" } }) %>
    </th>
    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
      <%= sort_link(@q, :name, t('.table.name'), {}, { data: { turbo_frame: "machines_list" } }) %>
    </th>
    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
      <%= sort_link(@q, :status, t('.table.status'), {}, { data: { turbo_frame: "machines_list" } }) %>
    </th>
    <th scope="col" class="relative px-6 py-3">
      <span class="sr-only"><%= t('.table.actions') %></span>
    </th>
  </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
  <% @machines.each do |machine| %>
    <tr class="hover:bg-gray-50 transition-colors">
      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
        <%= machine.code %>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
        <%= machine.name %>
      </td>
      <td class="px-6 py-4 whitespace-nowrap">
        <% if machine.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <%= t('.status.active') %>
                      </span>
        <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        <%= t('.status.inactive') %>
                      </span>
        <% end %>
      </td>
      <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <div class="flex justify-end space-x-3">
          <%= link_to machine_path(machine),
                      class: "text-blue-600 hover:text-blue-900 transition-colors",
                      title: t('.actions.show') do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          <% end %>

          <%= link_to edit_machine_path(machine),
                      class: "text-blue-600 hover:text-blue-900 transition-colors",
                      title: t('.actions.edit') do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>

          <%= link_to machine_path(machine),
                      class: "text-red-600 hover:text-red-900 transition-colors",
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: t('.actions.confirm_deactivate')
                      },
                      title: t('.actions.deactivate') do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>