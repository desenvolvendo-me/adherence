<!-- app/views/products/_machine_row.html.erb -->
<div class="machine-row bg-gray-50 p-4 rounded-lg border border-gray-200 hover:border-gray-300 transition-colors">
  <% if mp_form.object.persisted? %>
    <%= mp_form.hidden_field :id %>
    <%= mp_form.hidden_field :_destroy %>
  <% end %>

  <div class="grid grid-cols-1 gap-4">
    <div>
      <%= mp_form.collection_select :machine_id,
                                    Machine.all, :id, :name,
                                    { prompt: t('.machines.select_prompt') },
                                    class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                                    data: {
                                      product_machines_target: "machineSelect",
                                      action: "change->product-machines#machineSelected"
                                    } %>
    </div>
  </div>
  <div class="mt-3 flex justify-end">
    <button type="button"
            data-action="product-machines#removeMachine"
            class="remove-machine inline-flex items-center text-sm text-red-600 hover:text-red-900 transition-colors">
      <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      <%= t('.machines.remove') %>
    </button>
  </div>
</div>