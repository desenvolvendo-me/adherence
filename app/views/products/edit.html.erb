<!-- app/views/products/edit.html.erb -->
<div class="min-h-screen bg-gray-50">
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto py-4 px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <div class="flex items-center space-x-3">
          <%= link_to product_path(@product),
                      class: "text-gray-600 hover:text-gray-900 inline-flex items-center transition-colors" do %>
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <%= t('.back') %>
          <% end %>
          <h1 class="text-2xl font-bold text-gray-900 ml-4"><%= t('.title') %></h1>
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">
          <%= @product.name.presence || t('.edit_product') %>
        </h2>
        <p class="mt-1 text-sm text-gray-500">
          <%= t('.form_description') %>
        </p>
      </div>

      <div class="px-4 py-5 sm:p-6">
        <%= render 'form', product: @product %>
      </div>
    </div>
  </main>
</div>